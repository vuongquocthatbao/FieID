        /* CSS RESET & GHOST WRAPPER */
        body, html { margin: 0; padding: 0; height: 100%; overflow: hidden; background: #000; }
        
        /* Loại bỏ khung viền và banner Google */
        #smartfin-bridge {
            width: 100%;
            height: calc(100% + 65px); /* Đẩy banner Google lên trên khu vực khuất */
            margin-top: -65px;         /* Triệt tiêu banner 65px của Apps Script */
            border: none;
            display: block;
        }

        /* Overlay bảo vệ trạng thái Loading */
        #loader {
            position: fixed; inset: 0; background: #0f172a; z-index: 999;
            display: flex; flex-direction: column; align-items: center; justify-content: center;
            font-family: 'Segoe UI', sans-serif; color: white; transition: opacity 0.5s;
        }
        .spinner {
            width: 40px; height: 40px; border: 4px solid rgba(255,255,255,0.1);
