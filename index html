    <iframe 
        id="smartfin-bridge" 
        src="https://script.google.com/macros/s/AKfycbyVUdyXuUWCh8rtIL1izwIqviKaeMP1qgmWcekh2hciwxLiVx9erU_iQhSjNG4JNJoj/exec" 
        allow="clipboard-read; clipboard-write; geolocation; microphone; camera;">
    </iframe>

    <script>
        const iframe = document.getElementById('smartfin-bridge');
        const loader = document.getElementById('loader');

        // Tự động ẩn Loader khi Iframe tải xong
        iframe.onload = function() {
            setTimeout(() => {
                loader.style.opacity = '0';
                setTimeout(() => loader.style.display = 'none', 500);
            }, 1500);
        };

        // Xử lý thông điệp và bảo mật
        window.addEventListener('message', function(e) {
            // Có thể mở rộng để đồng bộ hóa dữ liệu giữa localhost và Google
            console.log("Bridge Data Sync:", e.data);
        });
    </script>
